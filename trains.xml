  <property name="project.jdk.home" value=""/>
  <property name="project.jdk.bin" value=""/>
  <property name="project.jdk.classpath" value=""/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.1.0/apiguardian-api-1.1.0.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.jupiter:junit-jupiter-api:5.5.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.5.0/junit-jupiter-api-5.5.0.jar"/>
  </path>
  
  <path id="library.maven:_org.junit.platform:junit-platform-commons:1.5.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.5.0/junit-platform-commons-1.5.0.jar"/>
  </path>
  
  <path id="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.2.0/opentest4j-1.2.0.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="forms-*.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Trains -->
  
  <dirname property="module.trains.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.trains" value="${jdk.home.9}"/>
  <property name="module.jdk.bin.trains" value="${jdk.bin.9}"/>
  <property name="module.jdk.classpath.trains" value="jdk.classpath.9"/>
  
  <property name="compiler.args.trains" value="-encoding UTF-8 -source 8 -target 1.8 ${compiler.args}"/>
  
  <property name="trains.output.dir" value="${module.trains.basedir}/target/classes"/>
  <property name="trains.testoutput.dir" value="${module.trains.basedir}/target/test-classes"/>
  
  <path id="trains.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="trains.module.production.classpath">
    <path refid="${module.jdk.classpath.trains}"/>
    <pathelement location="${basedir}/lib/apiguardian-api-1.1.0.jar"/>
    <pathelement location="${basedir}/lib/junit-jupiter-api-5.5.0.jar"/>
    <pathelement location="${basedir}/lib/junit-platform-commons-1.5.0.jar"/>
    <pathelement location="${basedir}/lib/opentest4j-1.2.0.jar"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.5.0.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.5.0.classpath"/>
  </path>
  
  <path id="trains.runtime.production.module.classpath">
    <pathelement location="${trains.output.dir}"/>
    <pathelement location="${basedir}/lib/apiguardian-api-1.1.0.jar"/>
    <pathelement location="${basedir}/lib/junit-jupiter-api-5.5.0.jar"/>
    <pathelement location="${basedir}/lib/junit-platform-commons-1.5.0.jar"/>
    <pathelement location="${basedir}/lib/opentest4j-1.2.0.jar"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.5.0.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.5.0.classpath"/>
  </path>
  
  <path id="trains.module.classpath">
    <path refid="${module.jdk.classpath.trains}"/>
    <pathelement location="${trains.output.dir}"/>
    <pathelement location="${basedir}/lib/apiguardian-api-1.1.0.jar"/>
    <pathelement location="${basedir}/lib/junit-jupiter-api-5.5.0.jar"/>
    <pathelement location="${basedir}/lib/junit-platform-commons-1.5.0.jar"/>
    <pathelement location="${basedir}/lib/opentest4j-1.2.0.jar"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.5.0.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.5.0.classpath"/>
  </path>
  
  <path id="trains.runtime.module.classpath">
    <pathelement location="${trains.testoutput.dir}"/>
    <pathelement location="${trains.output.dir}"/>
    <pathelement location="${basedir}/lib/apiguardian-api-1.1.0.jar"/>
    <pathelement location="${basedir}/lib/junit-jupiter-api-5.5.0.jar"/>
    <pathelement location="${basedir}/lib/junit-platform-commons-1.5.0.jar"/>
    <pathelement location="${basedir}/lib/opentest4j-1.2.0.jar"/>
    <path refid="library.maven:_org.junit.jupiter:junit-jupiter-api:5.5.0.classpath"/>
    <path refid="library.maven:_org.apiguardian:apiguardian-api:1.1.0.classpath"/>
    <path refid="library.maven:_org.opentest4j:opentest4j:1.2.0.classpath"/>
    <path refid="library.maven:_org.junit.platform:junit-platform-commons:1.5.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.trains">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.trains">
    <patternset refid="excluded.from.module.trains"/>
  </patternset>
  
  <path id="trains.module.sourcepath">
    <dirset dir="${module.trains.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="trains.module.test.sourcepath">
    <dirset dir="${module.trains.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.trains" depends="compile.module.trains.production,compile.module.trains.tests" description="Compile module Trains"/>
  
  <target name="compile.module.trains.production" depends="register.custom.compilers" description="Compile module Trains; production classes">
    <mkdir dir="${trains.output.dir}"/>
    <javac2 destdir="${trains.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.trains}/javac">
      <compilerarg line="${compiler.args.trains}"/>
      <bootclasspath refid="trains.module.bootclasspath"/>
      <classpath refid="trains.module.production.classpath"/>
      <src refid="trains.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.trains"/>
    </javac2>
    
    <copy todir="${trains.output.dir}">
      <fileset dir="${module.trains.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.trains.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.trains.tests" depends="register.custom.compilers,compile.module.trains.production" description="compile module Trains; test classes" unless="skip.tests">
    <mkdir dir="${trains.testoutput.dir}"/>
    <javac2 destdir="${trains.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.trains}/javac">
      <compilerarg line="${compiler.args.trains}"/>
      <bootclasspath refid="trains.module.bootclasspath"/>
      <classpath refid="trains.module.classpath"/>
      <src refid="trains.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.trains"/>
    </javac2>
    
    <copy todir="${trains.testoutput.dir}">
      <fileset dir="${module.trains.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.trains" description="cleanup module">
    <delete dir="${trains.output.dir}"/>
    <delete dir="${trains.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.trains" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.trains" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>